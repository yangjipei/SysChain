@model SysChain.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zh-CN" dir="ltr">
    <head>
        <meta charset="utf-8"/>
        <title>宇通商城 超市网上进货平台</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <meta name="renderer" content="webkit"/>
        <link rel="icon" type="image/x-icon" href="~/Content/Public/Images/ico/favicon.ico"/>
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/Public/Images/ico/favicon.ico"/>
        <!--[if lt IE 9]>
            <link type="text/css" rel="stylesheet" href="~/Content/Public/Hack/css/ie8.css" />
            <script type="text/javascript" src="~/Content/Public/Hack/js/html5shiv.min.js"></script>
            <script type="text/javascript" src="~/Content/Public/Hack/js/IE9.js"></script>
        <![endif]-->
		<link type="text/css" rel="stylesheet" href="~/Content/Public/Plugin/font-awesome-4.6.3/css/font-awesome.min.css"/>
		<link type="text/css" rel="stylesheet" href="~/Content/Public/Plugin/css/icon.min.css"/>
		@Styles.Render("~/css/home/base")
    </head>

    <body>
        <div id="header">
            <header>
                <h1 id="logo">
                    <a href="./index.html" title="宇通商城 网上进货平台">网上进货平台</a>
                </h1>
                <ul id="nav">
                    <li><a class="current" href="./index.html" title="首页">首页</a></li>
                    <li><a href="./mall.html" title="宇通商城">宇通商城</a></li>
                    <li><a href="./store.html" title="宇通超市">宇通超市</a></li>
                    <li><a href="./service.html" title="宇通服务站">宇通服务站</a></li>
                    <li><a href="./partner.html" title="城市合伙人">城市合伙人</a></li>
                    <li><a href="./about.html" title="关于我们">关于我们</a></li>
                </ul>
                <strong><i class="fa fa-phone"></i>400-800-8888</strong>
            </header>
        </div>
        
        <main id="Login-index">
            <section>
                <div class="intro">
                    <h1>我们能一起做些什么？</h1>
                    <ul>
                        <li>商家加盟</li>
                        <li>合作商加盟</li>
                        <li>代理加盟</li>
                        <li>城市合伙人</li>
                    </ul>
                </div>

                <div class="form">
                    <ul>
                        <li>
                            <a class="current" data-id="common" href="#" title="会员登录">会员登录</a>
                        </li>
                    </ul>
                    
                    <!-- 普通登录 -->
                    <form id="common" action="@Url.Action("Login","Member")" method="post">
                        <p>
                            <span><i class="i i-user3"></i></span>
                            @Html.TextBoxFor(m => m.LoginName,new {placeholder="请输入登录账号",autocomplete="off"})
                        </p>
                        <p>
                            <span><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(m=>m.LoginPassword,new {placeholder="请输入登录密码"})
                        </p>
                        <div id="drag"></div>
                        <p>
                            <input class="btn btn-risk" id="btnSubmit" type="submit" value="登录" />
                        </p>
                    </form>

                    <ol>
                        <li><a href="#" title="忘记密码？">忘记密码？</a></li>
                        <li><a href="#" title="免费注册">免费注册</a></li>
                    </ol>
                </div>
                <!-- div.form -->
            </section>
        </main>
        
        <div id="footer" class="white">
            <footer>
                <div class="left">
                    <strong><i class="fa fa-phone"></i>400-838-1777</strong>
                    <ul>
                        <li><a href="#" title="联系我们">联系我们</a></li>
                        <li><a href="#" title="合作流程">合作流程</a></li>
                        <li><a href="#" title="商家入驻">商家入驻</a></li>
                    </ul>
                    <p>Copyright<i class="fa fa-copyright"></i>2014 yutongejia.net Inc. All Rights Reserved. <span>宇通E家</span><span>版权所有</span><a href="#" title="宁ICP证070359号">宁ICP证070359号</a></p>
                </div>
                <div class="right">
                    <div>
                        <span class="circle"><i class="i i-arrow-right4"></i></span>
                        <p>马上扫一扫！</p>
                        <p>关注我们，深入了解我们</p>
                    </div>
                    <img src="~/Content/Home/Images/2.jpg" alt="二维码"/>
                </div>
            </footer>
        </div>
		@Scripts.Render("~/js/tools")
		@Scripts.Render("~/js/login")
    </body>
</html>