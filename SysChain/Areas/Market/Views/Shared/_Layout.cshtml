            <li><a href="#top" title="回到顶部">回到顶部</a></li>
        </ul>
    </div>
    <!-- div#aside-nav-left -->
    <div id="aside-nav-right">
        <ul>
            <li><a class="avatar" href="#" title="头像"><img src="/Content/Market/Images/img/avatar.png" alt="头像"></a></li>
            <li><a class="cart" href="./shopping-cart.html" title="购物车"><i class="fa fa-cart-plus fa-flip-horizontal"></i><b>购</b><b>物</b><b>车</b></a></li>
