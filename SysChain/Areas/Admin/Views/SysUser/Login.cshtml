    <link type="text/css" rel="stylesheet" href="~/Content/Public/Plugin/font-awesome-4.7.0/css/font-awesome.min.css"/>
    <link type="text/css" rel="stylesheet" href="~/Content/Public/Plugin/css/icon.min.css"/>
    @Styles.Render("~/css/admin/base")
</head>
<body id="Login-index">
    <main>
        <div class="form">
            <header>
                <h1>欢迎登录</h1>
            </header>

            <form id="common" action="@Url.Action("Login","SysUser",new{area="Admin"})" method="post">
                <p>
                    <span><i class="i i-user3"></i></span>
                    @Html.TextBoxFor(m => m.LoginName,new {placeholder="请输入登录账号",autocomplete="off"})
                </p>
                <p>
                    <span><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(m=>m.LoginPassword,new {placeholder="请输入登录密码",value="mm888888"})
                </p>
                <div id="drag"></div>
                <p>
                    <input class="btn btn-risk" id="btnSubmit" type="submit" value="登 录" />
                </p>
            </form>
            <ol>
                <li><a href="/" title="返回首页？">返回首页</a></li>
                <li><a href="#" title="联系客服">联系客服</a></li>
            </ol>
        </div>
        <!-- div.form -->
    </main>

    <footer>
        <ul>
            <li><a href="@Url.Action("About","Home",new{area=""})"  target="_blank" title="关于我们">关于我们</a></li>
            <li><a href="@Url.Action("ApplyForSupplier","Home",new{area=""})" target="_blank" title="商家入驻" >供应商入驻</a></li>
            <li><a href="@Url.Action("Index","Help",new{area=""})" target="_blank" title="帮助中心">帮助中心</a></li>
        </ul>
        <p>Copyright<i class="fa fa-copyright"></i>2014 yutongejia.net Inc. All Rights Reserved. <span>宇通E家</span><span>版权所有</span><a href="#" title="宁ICP证070359号">宁ICP证070359号</a></p>
    </footer>
	<script type="text/javascript" src="~/Content/Public/Jquery/jquery-1.8.3.min.js"></script>	
	@Scripts.Render("~/js/tools")
	@Scripts.Render("~/js/login")
</body>
</html>

